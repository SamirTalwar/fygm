#!/usr/bin/env zsh

function fail {
    echo "The version should match an installed Java VM." >&2
}

if [[ $# -eq 0 ]]; then
    echo "Usage:" >&2
    echo "    source $0 <version>" >&2
    echo "    $0 <version> <command>" >&2
    echo >&2
    fail
    return 1
fi

version=$1
shift
cmd=($@)

function java_home {
    /usr/libexec/java_home $@ 2> /dev/null
}

if JAVA_HOME=$(java_home -v $version); then
elif JAVA_HOME=$(java_home -v 1.$version); then
else
    fail
    return 2
fi
export JAVA_HOME

path=($JAVA_HOME/bin $path)
export PATH

if [[ $#cmd -gt 0 ]]; then
    $cmd
fi
