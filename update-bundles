#!/usr/bin/env ruby

git_bundles = IO.readlines(File.join(File.dirname(__FILE__), 'git-bundles')).collect { |line| line.strip }
vim_org_scripts = IO.readlines(File.join(File.dirname(__FILE__), 'vim.org-scripts')).collect { |line| line.split }

# vim_org_scripts = [
#   ["IndexedSearch", "7062",  "plugin"],
#   ["gist",          "12732", "plugin"],
#   ["jquery",        "12107", "syntax"]
# ]

require 'fileutils'
require 'open-uri'

bundles_dir = File.join(ENV['HOME'], '.vim', 'bundle')

FileUtils.cd(bundles_dir)

puts "Deleting all vim bundles..."
Dir["*"].each {|d| FileUtils.rm_rf d }

git_bundles.each do |url|
  dir = url.split('/').last.sub(/\.git$/, '')
  puts "  Unpacking #{url} into #{dir}"
  `git clone #{url} #{dir}`
  FileUtils.rm_rf(File.join(dir, ".git"))
end

vim_org_scripts.each do |name, script_id, script_type|
  puts "  Downloading #{name}"
  local_file = File.join(name, script_type, "#{name}.vim")
  FileUtils.mkdir_p(File.dirname(local_file))
  File.open(local_file, "w") do |file|
    file << open("http://www.vim.org/scripts/download_script.php?src_id=#{script_id}").read
  end
end
