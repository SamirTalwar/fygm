#!/usr/bin/env zsh

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

set -e

function exists {
    (( $+commands[$1] ))
}

function if-exists {
    if exists $1; then
        "$@"
    fi
}

function update-gems {
    gem update --system && gem update && gem cleanup
}

if exists brew; then
    brew update
    brew upgrade
    brew cleanup
    brew linkapps
fi

if exists apt-get; then
    apt-get update
    apt-get upgrade
fi

if exists rvm; then
    rvm get stable
    rvm cleanup all
    rvm reload
fi

if exists gem; then
    if exists rvm; then
        (rvm use ruby@global && update-gems)
    fi

    update-gems
fi

if exists pip; then
    pip install --upgrade setuptools
    pip install --upgrade pip
fi

if-exists npm update

if-exists cabal update
