[user]
	name = Samir Talwar
	email = samir@noodlesandwich.com
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	ignorecase = false
[color]
	ui = true
[commit]
	gpgsign = true
[fetch]
	prune = true
[push]
	default = simple
[transfer]
	fsckObjects = true
[advice]
	detachedHead = false

[alias]
	git = ! git

	add-all = add --all
	amend = commit --amend --no-edit
	exec = "! bash -c \"$*\" #"
	log-tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	main-branch = ! git config branch.main || echo 'origin/master'
	name = ! git symbolic-ref --short HEAD 2> /dev/null || git rev-parse --short HEAD
	pick-axe = log -p -S
	praise = blame

	add-all-and-commit = ! ~/bin/git/add-all-and-commit
	checkout-master-and-update = ! ~/bin/git/checkout-master-and-update
	delete-old-branches = ! ~/bin/git/delete-old-branches
	delete-remote = ! ~/bin/git/delete-remote
	dirs = ! ~/bin/git/dirs
	first-push = ! ~/bin/git/first-push
	fuck-it = ! ~/bin/git/fuck-it
	pull-everything = ! ~/bin/git/pull-everything
	pull-request = ! ~/bin/git/pull-request
	switch-to = ! ~/bin/git/switch-to
	sync = ! ~/bin/git/sync
	update-master = ! ~/bin/git/update-master

	a = add-all
	c = commit --verbose
	ac = add-all-and-commit
	lg = log-tree
	m = checkout-master-and-update
	p = pull-everything
	pr = pull-request
	s = status
	up = update-master
	upm = ! git update-master && git merge $(git main-branch)
	upr = ! git update-master && git rebase $(git main-branch)
