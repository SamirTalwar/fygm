[user]
	name = Samir Talwar
	email = samir@noodlesandwich.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	autocrlf = input
	ignorecase = false
[color]
	ui = true
[commit]
	gpgsign = true
[fetch]
	prune = true
[push]
	default = simple
[transfer]
	fsckObjects = true

[alias]
	git = ! git

	add-all = add --all
	amend = commit --amend --no-edit
	exec = "! bash -c \"$*\" #"
	log-tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	main-branch = ! git config branch.main || echo 'master'
	name = symbolic-ref --short HEAD
	pick-axe = log -p -S
	praise = blame

	checkout-and-pull = ! ~/bin/git/checkout-and-pull
	checkout-master-and-update = ! ~/bin/git/checkout-master-and-update
	delete-old-branches = ! ~/bin/git/delete-old-branches
	delete-remote = ! ~/bin/git/delete-remote
	dirs = ! ~/bin/git/dirs
	first-push = ! ~/bin/git/first-push
	fuck-it = ! ~/bin/git/fuck-it
	pull-everything = ! ~/bin/git/pull-everything
	pull-request = ! ~/bin/git/pull-request
	switch-to = ! ~/bin/git/switch-to
	update-master = ! ~/bin/git/update-master

	a = ! git add-all
	c = commit -v
	co = ! git checkout-and-pull
	lg = ! git log-tree
	m = ! git checkout-master-and-update
	p = ! git pull-everything
	pr = ! git pull-request
	s = ! git status
	up = ! git update-master
	upm = ! git update-master && git merge $(git main-branch)
	upr = ! git update-master && git rebase $(git main-branch)
