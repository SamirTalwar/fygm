set nocompatible
set nobackup

set ruler
set showcmd

set backspace=indent,eol,start

set smarttab
set expandtab
set autoindent
set cindent
set copyindent
set preserveindent
set shiftwidth=4
set tabstop=4
set softtabstop=4

set mouse=a

syntax on
filetype plugin indent on

command W w
command Q q
command Wq wq
command WQ wq
